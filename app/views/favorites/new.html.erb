<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.1)), url(https://media.istockphoto.com/photos/pasta-salad-bowl-with-broccoli-tomato-onion-olives-corn-salad-and-picture-id1352898440?b=1&k=20&m=1352898440&s=170667a&w=0&h=8phYjp9eG8crpa3x_wYZATJjadVmvfcS2dEVMLCvXQs=);">
  <div class="container">
    <div class="title-list">
      <h1>Your favorite?</h1>
    </div>
    <%= simple_form_for [@list, @favorite] do |f| %>
      <div class="list-form">
        <%= f.association :breakfast %>
        <%= f.input :photo, as: :file %>
        <%= f.input :comment %>
        <%= f.submit 'submit', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
