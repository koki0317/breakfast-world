<div class="banner" style = "background-image: url(https://diplomartbrussels.com/wp-content/uploads/2020/09/food-background-images-94-images-in-co-381169-png-images-pngio-food-background-png-1440_619.png);">
  <div class="container">
    <div class="content-wrapper">
      <h1 class="title">
        <span class="title-word title-word-1">This</span>
        <span class="title-word title-word-2">is</span>
        <span class="title-word title-word-3">my</span>
        <span class="title-word title-word-4">breakfast</span>
      </h1>
      <%= link_to "Create lists", new_list_path, class: "list-button" %>
    </div>
  </div>
</div>
<div class="middle-content">
  <iframe width="760" height="400" src="https://www.youtube.com/embed/ry1E1uzPSU0" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
</div>
<div class="container">
  <div class="cards-index">
    <% @lists.each do |list| %>
      <div class="card-index">
        <% if list.photo.attached? %>
          <div class="card-category" data-aos= "zoom-in" data-aos-easing="ease-in-sine" data-aos-duration="1000" style= "background-image: url(<%= cl_image_path list.photo.key %>);">
          <% end %>
          <%= link_to list.name, list_path(list), class: "single-card" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
