<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @list.photo.key %>);">
  <div class="container">
    <div class="content-wrapper">
      <%= link_to list_path(@list), data: { turbo_method: :delete, turbo_confirm: "Delete #{@list.name}?" }, class: "delete-list" do %>
        <i class="fa-solid fa-trash-can"></i>
      <% end %>
      <h1><%= @list.name %></h1>
      <%= link_to "Create a favorite list", new_list_favorite_path(@list), class: "btn btn-flat" %>
    </div>
  </div>
</div>
<div class="container">
  <div class="cards">
    <% @list.favorites.each do |favorite| %>
      <div class="card" style="width: 18rem;">
        <%= link_to favorite_path(favorite), data: { turbo_method: :delete, turbo_confirm: "Delete #{favorite.breakfast.name}?" }, class: "delete-link" do %>
          <i class="fa-solid fa-trash-can"></i>
        <% end %>
        <%= link_to edit_favorite_path(favorite), class:"edit-link" do %>
          <i class="fa-solid fa-pencil"></i>
        <% end %>
        <% if favorite.photo.attached? %>
          <%= cl_image_tag favorite.photo.key, class:"favorite-image" %>
        <% else %>
          <%= image_tag "https://i.pinimg.com/originals/8e/be/2a/8ebe2a4ffd8621a04b333b9f4bc306be.gif", class:"favorite-image"  %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= favorite.breakfast.name %></h5>
          <p class="card-text"><%= favorite.comment %></p>
          <%# <%= link_to "See Recipe", lists_path, class: "btn btn-primary mr-5 w-100" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
